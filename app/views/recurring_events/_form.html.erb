<%= form_for(@recurring_event) do |f| %>
  <% if @recurring_event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@recurring_event.errors.count, "error") %> prohibited this recurring event from being saved:</h2>

      <ul>
      <% @recurring_event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
    <%= f.label :description, :class=>"mdl-textfield__label" %>
    <%= f.text_field :description, :class=>"mdl-textfield__input", required:true, autofocus:true %>
  </div><br />
  <div class="field mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
    <%= f.label :amount, :class=>"mdl-textfield__label" %>
    <%= f.number_field :amount, :class=>"mdl-textfield__input" %>
  </div><br />

  <div class="select-container">
    <div class="select">
      <%= f.collection_select(:category, RecurringEvent.categories.map { |c| [c.first, c.first] }, :first, :second, {:include_blank => false}, { class: "select-text" }) %>
      <span class="select-highlight"></span>
      <span class="select-bar"></span>
      <label class="select-label">Category</label>
    </div>
  </div>

  <br />


  <div class="select-container unit-event">
    <div class="select">
      <%= f.collection_select(:unit_id, Unit.all, :id, :name, {:include_blank => "Select a unit"}, { class: "select-text" }) %>
      <span class="select-highlight"></span>
      <span class="select-bar"></span>
      <label class="select-label">Unit</label>
    </div>
  </div>



  <div class="select-container property-event">
    <div class="select">
      <%= f.collection_select(:property_id, Property.all, :id, :address, {:include_blank => "Select a property"}, { class: "select-text" }) %>
      <span class="select-highlight"></span>
      <span class="select-bar"></span>
      <label class="select-label">Property</label>
    </div>
  </div>


  <label class="mdl-radio mdl-js-radio mdl-js-ripple-effect mb-50" for="assign-to-unit">
    <%= f.radio_button( :event_type, 'Unit', options={id:"assign-to-unit", class:"mdl-radio__button"}) %>
    <span class="mdl-radio__label">Assign to Unit</span>
  </label>
  <label class="mdl-radio mdl-js-radio mdl-js-ripple-effect mb-50" for="assign-to-property">
    <%= f.radio_button( :event_type, 'Property', options={id:"assign-to-property", class:"mdl-radio__button"}) %>
    <span class="mdl-radio__label">Assign to Property</span>
  </label>

  <div class="actions">
    <%= f.submit :class=>"mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent" %>
  </div>
<% end %>
