<div class="mdl-grid">
  <div class="mdl-cell--8-col mdl-shadow--4dp p-50 auto">
    <h3>Login</h3>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field mdl-textfield mdl-js-textfield mdl-textfield--floating-label full-width">
        <%= f.label :email, :class=>"mdl-textfield__label"%>
        <%= f.email_field :email, autofocus: true, :class=>"mdl-textfield__input" %>
      </div>
      <br />

      <div class="field field mdl-textfield mdl-js-textfield mdl-textfield--floating-label full-width">
        <%= f.label :password, :class=>"mdl-textfield__label"%>
        <%= f.password_field :password, autocomplete: "off", :class=>"mdl-textfield__input"%>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field mdl-checkbox mdl-js-checkbox mdl-js-ripple-effect">
          <%= f.check_box :remember_me, :class=>"mdl-checkbox__input" %>
          <%= f.label :remember_me, :class=>"mdl-checkbox__label" %>
        </div>
      <% end -%>

      <div class="actions">
        <%= f.submit "Log in", :class=>"mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent full-width" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
