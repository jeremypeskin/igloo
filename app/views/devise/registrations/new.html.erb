<div class="mdl-grid">
  <div class="mdl-cell--8-col mdl-shadow--4dp p-50 auto">
    <h3>Sign up</h3>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="field mdl-textfield mdl-js-textfield mdl-textfield--floating-label full-width">
        <%= f.label :email, :class=>"mdl-textfield__label" %>
        <%= f.email_field :email, autofocus: true, :class=>"mdl-textfield__input" %>
      </div>

      <div class="field mdl-textfield mdl-js-textfield mdl-textfield--floating-label full-width">
        <%= f.label :password, :class=>"mdl-textfield__label" %>
        <%= f.password_field :password, autocomplete: "off", :class=>"mdl-textfield__input" %>
      </div>

      <div class="field mdl-textfield mdl-js-textfield mdl-textfield--floating-label full-width">
        <%= f.label :password_confirmation, :class=>"mdl-textfield__label" %>
        <%= f.password_field :password_confirmation, autocomplete: "off", :class=>"mdl-textfield__input" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", :class=>"mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent full-width" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
