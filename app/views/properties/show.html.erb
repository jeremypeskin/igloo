<p id="notice"><%= notice %></p>
<div class="resource-header mdl-grid section--center mdl-shadow--2dp mdl-color--white">
  <div class="mdl-card mdl-cell mdl-cell--12-col">
    <div class="mdl-card__supporting-text">
      <h4>
        <%= @property.address %>
      </h4>
      <p>
        <strong>Price:</strong>
        <%= @property.price %>
      </p>
    </div>
    <div class="mdl-card__actions">
      <%= link_to 'Edit', edit_property_path(@property), :class=>"mdl-button mdl-js-button mdl-js-ripple-effect" %>
      <%= link_to 'Back', properties_path, :class=>"mdl-button mdl-js-button mdl-js-ripple-effect" %>
    </div>
  </div>
</div>

<div class="cards-container">
  <% @property.units.each do |unit| %>
    <div class="demo-card-event mdl-card mdl-shadow--2dp">
      <div class="unit_card">
      </div>
      <div class="mdl-card__title mdl-card--expand">
        <h4>
          <%= unit.name %>
        </h4>
      </div>
      <div class="mdl-card__actions mdl-card--border">
        <%= link_to 'Show', unit, :class=>"mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" %>
        <%= link_to 'Edit', edit_unit_path(unit), :class=>"mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" %>
        <%= link_to 'Delete', unit, method: :delete, data: { confirm: 'Are you sure?' }, :class=>"mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" %>
      </div>
  <% end %>
</div>
