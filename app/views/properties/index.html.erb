<div class="cards-container">
  <% if @properties.exists? %>
    <% @properties.each do |property| %>
      <div class="demo-card-event mdl-card mdl-shadow--2dp mdl-color--white">
        <div class="property_card">
        </div>
        <div class="mdl-card__title mdl-card--expand">
          <h4 class="mdl-color-text--indigo bold">
            <%= property.address %>
          </h4>
        </div>
        <div class="mdl-card__actions mdl-card--border">
          <%= link_to 'Show', property, :class=>"mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" %>
          <%= link_to 'Edit', edit_property_path(property), :class=>"mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" %>
          <%= link_to 'Delete', property, method: :delete, data: { confirm: 'Are you sure?' }, :class=>"mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" %>
        </div>
      </div>
    <% end %>
  <% else %>
    <%= render "shared_partials/placeholder" %>
  <% end %>
</div>
