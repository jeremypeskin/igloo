<div>
  <%= link_to 'New Property', new_property_path, :class=>"mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent new-button" %>
</div>
<div class="cards-container">
  <% @properties.each do |property| %>
    <div class="demo-card-event mdl-card mdl-shadow--2dp">
      <div class="mdl-card__title mdl-card--expand">
        <h4>
          <%= property.address %>
        </h4>
      </div>
      <div class="mdl-card__actions mdl-card--border">
        <%= link_to 'Show', property, :class=>"mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" %>
        <%= link_to 'Edit', edit_property_path(property), :class=>"mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" %>
        <%= link_to 'Delete', property, method: :delete, data: { confirm: 'Are you sure?' }, :class=>"mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" %>
      </div>
    </div>
  <% end %>
</div>
